@model WebGoat.NET.ViewModels.GenerateReportViewModel

@{
    ViewData["Title"] = "Generate Report";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    <form asp-action="Generate" method="post">
        <!-- Report Information Section -->
        <div class="card mb-4">
            <div class="card-header">
                <h3>Report Information</h3>
            </div>
            <div class="card-body">
                <div class="form-group mb-2">
                    <label asp-for="ReportName"></label>
                    <input asp-for="ReportName" class="form-control" />
                    <span asp-validation-for="ReportName" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="ReportType"></label>
                    <select asp-for="ReportType" class="form-control">
                        <option value="AnnualReport">Annual Report</option>
                        <option value="MonthlyReport">Monthly Report</option>
                    </select>
                    <span asp-validation-for="ReportType" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg">Generate Report</button>
        </div>
    </form>
</div>