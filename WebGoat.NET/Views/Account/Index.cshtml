@model WebGoat.NET.ViewModels.AccountViewModel

@{
    ViewData["Title"] = "Account Home";
}

<div class="container mt-5">
    <h2>Welcome, @Model.Username!</h2>
    <div class="card mb-4">
        <div class="card-header">
            <h3>Account Information</h3>
        </div>
        <div class="card-body">
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>First Name:</strong> @Model.FirstName</p>
            <p><strong>Last Name:</strong> @Model.LastName</p>
            <p><strong>Company Name:</strong> @Model.CompanyName</p>
            <p><strong>Address:</strong> @Model.Address</p>
            <p><strong>City:</strong> @Model.City</p>
            <p><strong>Country:</strong> @Model.Country</p>
            <p><strong>Postal Code:</strong> @Model.PostalCode</p>
            <a asp-action="Edit" asp-controller="Account" class="btn btn-primary">Edit Account Info</a>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <h3>Orders</h3>
        </div>
        <div class="card-body">
            <a asp-action="Orders" asp-controller="Checkout" class="btn btn-primary">View Order List</a>
        </div>
    </div>
    <div class="text-center mt-4">
        <form asp-action="Logout" asp-controller="Account" method="post">
            <button type="submit" class="btn btn-danger btn-lg">Logout</button>
        </form>
    </div>
</div>